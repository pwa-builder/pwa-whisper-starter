{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "Hello ${$root.name}!",
            "wrap": true,
            "horizontalAlignment": "Center",
            "size": "ExtraLarge"
        },
        {
            "type": "Input.Text",
            "placeholder": "Name",
            "id": "name",
            "inlineAction": {
                "type": "Action.Execute",
                "verb": "updateName",
                "title": "Submit"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
  }